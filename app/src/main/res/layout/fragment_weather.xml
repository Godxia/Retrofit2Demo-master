<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/relay_basic"
        android:background="@color/blue">
        <TextView
            android:id="@+id/tv_title_city"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginLeft="160dp"
            android:textColor="@color/white"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="120dp"
            android:textColor="@color/white"
            android:textSize="60sp"
            android:gravity="center"
            android:layout_marginLeft="120dp"
            android:id="@+id/tv_basic_temp"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/tv_basic_temp"
            android:layout_marginTop="50dp"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:id="@+id/tv_basic_description"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/tv_basic_temp"
            android:layout_marginTop="90dp"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:id="@+id/tv_basic_temp_max"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/tv_basic_temp"
            android:layout_marginTop="120dp"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:id="@+id/tv_basic_temp_min"/>
        <TextView
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="90dp"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/white"
        android:id="@+id/tv_humid"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="150dp"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:id="@+id/tv_pres"/>
        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="210dp"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:id="@+id/tv_wind_sc"/>
        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="90dp"
            android:text="湿度"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/white"
            />

        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="150dp"
            android:text="气压"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="210dp"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:id="@+id/tv_wind_dir"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="400dp"
        android:id="@+id/reclay_daily">

    </android.support.v7.widget.RecyclerView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingLeft="8dp"
        android:layout_marginTop="510dp"
        android:paddingRight="8dp"
        android:paddingTop="16dp">

        <com.ray.retrofit2.widgets.AqiView
            android:id="@+id/aqiview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewAqi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/aqiview"
            android:layout_toRightOf="@+id/aqiview" />

    </RelativeLayout>
</RelativeLayout>
    </android.support.v4.widget.NestedScrollView>